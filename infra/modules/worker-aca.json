{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "2544536413974891296"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "acaEnvId": {
      "type": "string",
      "metadata": {
        "description": "Name of the Container Apps Environment."
      }
    },
    "appName": {
      "type": "string",
      "defaultValue": "engram-worker",
      "metadata": {
        "description": "Name of the worker container app."
      }
    },
    "containerImage": {
      "type": "string",
      "metadata": {
        "description": "Container image for the worker."
      }
    },
    "postgresFqdn": {
      "type": "string",
      "metadata": {
        "description": "PostgreSQL FQDN."
      }
    },
    "temporalHost": {
      "type": "string",
      "metadata": {
        "description": "Temporal host."
      }
    },
    "zepApiUrl": {
      "type": "string",
      "metadata": {
        "description": "Zep API URL."
      }
    },
    "postgresPassword": {
      "type": "securestring",
      "metadata": {
        "description": "PostgreSQL password."
      }
    },
    "openAiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Azure OpenAI key."
      }
    },
    "openAiEndpoint": {
      "type": "string",
      "metadata": {
        "description": "Azure OpenAI endpoint."
      }
    },
    "azureAiEndpoint": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Azure AI Services unified endpoint (base URL)."
      }
    },
    "azureAiProjectName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Azure AI Services project name."
      }
    },
    "keyVaultUri": {
      "type": "string",
      "metadata": {
        "description": "Key Vault URI."
      }
    },
    "registryUsername": {
      "type": "string",
      "metadata": {
        "description": "Registry username."
      }
    },
    "registryPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Registry password."
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {
        "Project": "Engram",
        "Component": "Worker"
      },
      "metadata": {
        "description": "Tags to apply to all resources."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[parameters('appName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "managedEnvironmentId": "[parameters('acaEnvId')]",
        "configuration": {
          "ingress": {
            "external": false
          },
          "dapr": {
            "enabled": false
          },
          "secrets": [
            {
              "name": "postgres-password",
              "value": "[parameters('postgresPassword')]"
            },
            {
              "name": "azure-openai-key",
              "value": "[parameters('openAiKey')]"
            },
            {
              "name": "registry-password",
              "value": "[parameters('registryPassword')]"
            }
          ],
          "registries": [
            {
              "server": "ghcr.io",
              "username": "[parameters('registryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "worker",
              "image": "[parameters('containerImage')]",
              "env": [
                {
                  "name": "ENVIRONMENT",
                  "value": "production"
                },
                {
                  "name": "AZURE_KEYVAULT_URL",
                  "value": "[parameters('keyVaultUri')]"
                },
                {
                  "name": "POSTGRES_HOST",
                  "value": "[parameters('postgresFqdn')]"
                },
                {
                  "name": "POSTGRES_PORT",
                  "value": "5432"
                },
                {
                  "name": "POSTGRES_USER",
                  "value": "cogadmin"
                },
                {
                  "name": "POSTGRES_PASSWORD",
                  "secretRef": "postgres-password"
                },
                {
                  "name": "POSTGRES_DB",
                  "value": "engram"
                },
                {
                  "name": "TEMPORAL_HOST",
                  "value": "[parameters('temporalHost')]"
                },
                {
                  "name": "TEMPORAL_NAMESPACE",
                  "value": "default"
                },
                {
                  "name": "TEMPORAL_TASK_QUEUE",
                  "value": "engram-agents"
                },
                {
                  "name": "ZEP_API_URL",
                  "value": "[parameters('zepApiUrl')]"
                },
                {
                  "name": "AZURE_OPENAI_KEY",
                  "secretRef": "azure-openai-key"
                },
                {
                  "name": "AZURE_OPENAI_ENDPOINT",
                  "value": "[parameters('openAiEndpoint')]"
                },
                {
                  "name": "AZURE_OPENAI_DEPLOYMENT",
                  "value": "gpt-4o"
                },
                {
                  "name": "AZURE_AI_ENDPOINT",
                  "value": "[parameters('azureAiEndpoint')]"
                },
                {
                  "name": "AZURE_AI_PROJECT_NAME",
                  "value": "[parameters('azureAiProjectName')]"
                }
              ],
              "resources": {
                "cpu": "[json('0.5')]",
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 5,
            "rules": [
              {
                "name": "http-scale",
                "http": {
                  "metadata": {
                    "concurrentRequests": "5"
                  }
                }
              }
            ]
          }
        }
      }
    }
  ],
  "outputs": {
    "workerAppName": {
      "type": "string",
      "value": "[parameters('appName')]"
    },
    "principalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', parameters('appName')), '2023-05-01', 'full').identity.principalId]"
    }
  }
}